                                      DockPanel.Dock="Top" IsChecked="False" Style="{StaticResource ToggleButton.Ghost}" HorizontalContentAlignment="Left" Margin="0"/>
                        <ContentPresenter x:Name="ExpandSite" Visibility="{Binding IsChecked, ElementName=HeaderSite, Converter={vc:BooleanToVisibilityConverter}}"/>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

